{
  "name": "decolize",
  "version": "0.0.0",
  "private": true,
  "repository": "git@github.com:kou64yama/decolize.git",
  "author": "YAMADA Koji <kou64yama@gmail.com>",
  "main": "index.js",
  "files": [
    "index.js",
    "persistences.js",
    "validators.js",
    "lib"
  ],
  "directories": {
    "lib": "lib"
  },
  "engines": {
    "node": ">=6.10",
    "npm": ">=3.10"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/reflect-metadata": "^0.0.5",
    "@types/sequelize": "^4.0.52",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.5.2",
    "chai": "^3.5.0",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.0",
    "editorconfig-tools": "^0.1.1",
    "lint-staged": "^4.0.0",
    "mocha": "^3.4.1",
    "nyc": "^10.3.2",
    "opn-cli": "^3.1.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "sequelize": "^4.1.0",
    "sqlite3": "^3.1.8",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "peerDependencies": {
    "sequelize": ">=3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "node": "current",
          "modules": false
        }
      ]
    ],
    "plugins": [
      "external-helpers"
    ]
  },
  "lint-staged": {
    "*.{cmd,html,json,md,sh,txt,xml,yml}": [
      "editorconfig-tools fix",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "lint:ts": "tslint src/**/*.ts tools/**/*.ts",
    "lint:staged": "lint-staged",
    "lint": "yarn run lint:ts",
    "test": "mocha",
    "test:watch": "npm run test -- --reporter min --watch",
    "test:cover": "cross-env NODE_ENV=test nyc npm run test",
    "coverage": "yarn run test:cover && nyc report --reporter=html && opn coverage/index.html",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "clean": "rimraf ./*.{js,d.ts} ./{lib,test}/**/*.{js,d.ts}",
    "build": "tsc"
  }
}
